# Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=password
DB_NAME=database
DB_PORT=3306
DB_DIALECT=mysql  # mysql o postgresql
DB_DEBUG=False

# Security - JWT
SECRET_KEY=your-flask-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hora en segundos

# Security - AES Encryption
AES_KEY=your-32-byte-aes-key-in-hex
AES_IV=your-16-byte-iv-in-hex

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Optional - AWS S3
BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# API Configuration
API_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
